<Window x:Class="wpfClass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfClass"
        mc:Ignorable="d"
        Title="Aplicacion WPF" Height="450" Width="800">
        <StackPanel>
            <TextBox Name="MiTextBox" Width="100" Margin="50" Text="{Binding ElementName=MiSlider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Slider Name="MiSlider" Minimum="0" Maximum="100" IsSnapToTickEnabled="true" />
        </StackPanel>
</Window>

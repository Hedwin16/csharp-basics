<Window x:Class="wpfClass.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:wpfClass" mc:Ignorable="d" Title="Aplicacion WPF" Height="450" Width="800">
    <StackPanel >
        <Label FontWeight="Bold" Foreground="Blue" >
            Agrega Ingredientes
        </Label>
        <CheckBox Name="cbTodos" IsThreeState="True" Checked="cdTodosHaCambiado" Unchecked="cdTodosHaCambiado">
            Todos
        </CheckBox>
        <StackPanel Margin="10">
            <CheckBox Name="cbChile" Checked="cdSimpleHaCambiado" Unchecked="cdSimpleHaCambiado">
                <TextBlock>
                    Chile <Run Foreground="Red" FontWeight="Bold">Picante </Run>
                </TextBlock>
            </CheckBox>
            <CheckBox Name="cbHongos" Checked="cdSimpleHaCambiado" Unchecked="cdSimpleHaCambiado">Hongos</CheckBox>
            <CheckBox Name="cbMuzzarella" Checked="cdSimpleHaCambiado" Unchecked="cdSimpleHaCambiado">Muzzarella</CheckBox>
        </StackPanel>

    </StackPanel>
</Window>